<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epgis.mapsdk.activities.AnnotationActivity">

    <com.epgis.mapsdk.maps.MapView
        android:id="@+id/mapView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_goback"
        android:layout_width="@dimen/title_icon_width"
        android:layout_height="@dimen/title_icon_height"
        android:layout_gravity="left"
        android:layout_margin="15dp"
        android:background="@drawable/title_item_bg"
        android:src="@drawable/back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:background="#D999"
        android:orientation="vertical"
        android:padding="5dp" >

        <CheckBox
            android:id="@+id/rb_add_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="添加点" />

        <CheckBox
            android:id="@+id/rb_add_polyline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="添加线" />

        <CheckBox
            android:id="@+id/rb_add_polygon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="添加面" />
    </LinearLayout>
</FrameLayout>
