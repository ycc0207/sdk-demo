<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_c"
    android:padding="0dp"
    >

    <ImageView
        android:id="@+id/maneuverView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <LinearLayout
        android:id="@+id/instructionLayoutText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/maneuverView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/stepPrimaryText"
            android:text="xxxxxx"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:gravity="left|center"
            android:minHeight="25dp"
            android:singleLine="true"
            android:textColor="@color/font_c00"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/stepDistanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="yyyyy"
            android:gravity="center|left"
            android:textColor="@color/font_c66"
            android:textSize="13dp"
            />

    </LinearLayout>

</RelativeLayout>